set $mod Mod1
set $mod2 Mod4

default_border pixel 1
default_floating_border normal

include $HOME/.config/i3/config-macropad.conf
include $HOME/.config/i3/config-barpc.conf

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:monospace 9

# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id nitrogen --restore
exec --no-startup-id xrandr --output HDMI-0 --left-of DP-1
exec --no-startup-id openrgb -p off
exec --no-startup-id picom
exec --no-startup-id desktop-items
exec --no-startup-id nm-applet
exec --no-startup-id numlockx
exec --no-startup-id shutter --min_at_startup
exec --no-startup-id STEAM_FRAME_FORCE_CLOSE=1 steam -silent
exec --no-startup-id /usr/libexec/gsd-xsettings
# exec_always --no-startup-id sbxkb

# The combination of xss-lock, nm-applet and pactl is a popular choice, so
# they are included here as an example. Modify as you see fit.

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet

bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

bindsym $mod2+Control+Up exec --no-startup-id sh -c 'pactl set-sink-volume @DEFAULT_SINK@ +2% && pkill -RTMIN+11 i3blocks'
bindsym $mod2+Control+Down exec --no-startup-id sh -c 'pactl set-sink-volume @DEFAULT_SINK@ -2% && pkill -RTMIN+11 i3blocks'
bindsym XF86AudioRaiseVolume exec --no-startup-id sh -c 'pactl set-sink-volume @DEFAULT_SINK@ +2% && pkill -RTMIN+11 i3blocks'
bindsym XF86AudioLowerVolume exec --no-startup-id sh -c 'pactl set-sink-volume @DEFAULT_SINK@ -2% && pkill -RTMIN+11 i3blocks'
bindsym XF86AudioMute exec --no-startup-id sh -c 'pactl set-sink-mute @DEFAULT_SINK@ toggle && pkill -RTMIN+11 i3blocks'
bindsym XF86AudioMicMute exec --no-startup-id sh -c 'pactl set-source-mute @DEFAULT_SOURCE@ toggle && pkill -RTMIN+10 i3blocks'
bindsym --whole-window $mod2+button4 exec --no-startup-id sh -c 'pactl set-sink-volume @DEFAULT_SINK@ +2% && pkill -RTMIN+11 i3blocks'
bindsym --whole-window $mod2+button5 exec --no-startup-id sh -c 'pactl set-sink-volume @DEFAULT_SINK@ -2% && pkill -RTMIN+11 i3blocks'

# start a terminal
bindsym $mod+Return exec alacritty

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec --no-startup-id rofi -show drun
# A more modern dmenu replacement is rofi:
# bindcode $mod+40 exec "rofi -modi drun,run -show drun"
# There also is i3-dmenu-desktop which only displays applications shipping a
# .desktop file. It is a wrapper around dmenu, so you need that installed.
# bindcode $mod+40 exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window

[mic_status]
command=bash -c 'STATUS=$(pactl list sources | grep -A 6 "$(pactl get-default-source)" | grep "Mute" | awk '\''{print $2}'\''); if [ "$STATUS" = "yes" ]; then echo "MUTE"; else echo ""; fi'
interval=1
signal=10
color=#FF0000

[volume]
command=amixer get Master | awk -F'[][]' '/%/ { if ($4 == "off") print " V "; else print " V: " $2 " "; exit }'
interval=1
signal=11

[tztime]
command=date '+%a, %d %b %Y - %H:%M:%S' | awk '{print " " $0 " "}'
interval=1

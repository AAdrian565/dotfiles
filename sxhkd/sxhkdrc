super + 1
	xfce4-terminal -e "btop" --maximize --hide-menubar

super + e
	alacritty -e lf

super + l
	betterlockscreen -l

alt + insert 
	flameshot gui

super + shift + s
	flameshot gui
super + {2, 3, 5, 6, 7}
	{code, obsidian, brave, discord, obs}

super + shift + c
	gpick -s

super + r
	rofi -show drun

super + v
	rofi -modi 'clipboard:greenclip print' -show clipboard

alt + c
	bash .config/rofi/autorofi.sh

ctrl + alt + t
	alacritty 

alt + Return
	alacritty


#
# Laptop Function Keys
#

#Brighness Up
XF86MonBrightnessUp
	xbacklight -inc 5

#Brightness Down
XF86MonBrightnessDown
	xbacklight -dec 5

# Matikan Layar (Ga bisa toggle kayak windows)
XF86ScreenSaver
	brightnessctl s 0

#Touchpad Toggle
XF86TouchpadToggle
	xinput set-prop 24 "Device Enabled" {0, 1} & dunstify "Touchpad"

# Next track
XF86AudioNext
	playerctl next

# Prev track
XF86AudioPrev
	playerctl previous

# Stop track
XF86AudioStop
	playerctl stop

# Play track
XF86AudioPlay
	playerctl play-pause

#Mute audio
XF86AudioMute
	pulsemixer --toggle-mute & dunstify "Muted"

#Volume up
XF86AudioRaiseVolume
	pulsemixer --change-volume +1 & dunstify "Volume Up"

#Volume down
XF86AudioLowerVolume
	pulsemixer --change-volume -1 & dunstify "Volume Down"


